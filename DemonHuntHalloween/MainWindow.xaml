<Window x:Class="DemonHuntHalloween.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemonHuntHalloween"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Black">

    <Grid x:Name="GameArea"
          MouseMove="PlayArea_MouseMove"
          MouseLeftButtonDown="PlayArea_Click">

        <Image x:Name="MainmenuImage"
            Visibility="Visible"
            Source="Assets/mainmenu.png"
            Stretch="Uniform"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
        
        <Canvas x:Name="PlayArea">
           
            <Ellipse x:Name="Dot"
                 Width="40"
                 Height="40"
                 Fill="Red"
                 Canvas.Left="380"
                 Canvas.Top="280" />

            <Rectangle x:Name="BadAim"
                   Width="{Binding ActualWidth, ElementName=PlayArea}"
                   Height="70"
                   Canvas.Top="0"
                   Canvas.Left="0"
                   Fill="Red"
                   Visibility="Hidden" />


            <!-- Health Bar (top of screen) -->
            <Grid x:Name="HealthAndInfoBar"
                Width="{Binding ActualWidth, ElementName=PlayArea}"
                Height="{Binding ActualHeight, ElementName=PlayArea}">
                <StackPanel x:Name="HealthBar"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,35,0,0"
                    Panel.ZIndex="100"
                    Width="Auto"
                    Height="30">
                </StackPanel>
                <TextBlock x:Name="EnemyName"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top">
                </TextBlock>
                <TextBlock x:Name="Warning"
                       Visibility="Hidden"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top">
                </TextBlock>
            </Grid>

            <!-- Left vertical bar -->
            <Rectangle x:Name="LeftBar"
                Width="40"
                Fill="Green"
                Canvas.Left="0"
                Canvas.Top="0" />

            <!-- Right vertical bar -->
            <Rectangle x:Name="RightBar"
                Width="40"
                Fill="Green"
                Canvas.Right="0"
                Canvas.Top="0" />

        </Canvas>




        <TextBlock x:Name="GameStateTextBlock"
            FontSize="100"
            LineHeight="100"
            Margin="0,40,0,80"
            LineStackingStrategy="BlockLineHeight"
            Height="700"
            Width="1000"
            FontWeight="Bold"
            Foreground="AntiqueWhite"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            TextAlignment="Center" />

        <TextBox
            x:Name="GameStats"
            Visibility="Hidden"
            BorderThickness="0"
            Background="Black"
            Foreground="DarkSeaGreen"
            Width="300"
            Height="800"
            FontSize="30"
            TextWrapping="Wrap" 
            AcceptsReturn="True" 
            VerticalScrollBarVisibility="Disabled"
            HorizontalAlignment="Left" />

        <!-- Grass overlaid and pinned to bottom -->
        <Image x:Name="GrassImage"
            Source="Assets/grassgreen.png"
            Stretch="Fill"
            Height="190"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Stretch" />

        <Image x:Name="DogLaughsImage"
            Visibility="Hidden"
            Source="Assets/DogLaugh.gif"
            Stretch="Fill"
            Height="200"
            Width="168"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Stretch" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
            <Button x:Name="ConnectToWiimote" Content="Connect to Wiimote" Click="ConnectToWiimote_Click"/>
            <Button x:Name="StartButton" Content="Start Game" Click="StartGameButton_Click" />
            <Button x:Name="ExitButton" Content="Exit Game" Click="ExitButton_Click" />
            <TextBlock x:Name="StatusText" Foreground="White" Margin="10,0,0,0" />
            <!--<TextBlock x:Name="CountdownText" Height="15" Width="200" FontSize="15" Foreground="White"/>-->
        </StackPanel>
    </Grid>

</Window>
